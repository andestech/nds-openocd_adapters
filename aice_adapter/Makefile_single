CC = gcc
CFLAGS  = -c -Wall -std=gnu99 -I. -I./jtag/drivers -DHAVE_CONFIG_H
#LDFLAGS = -all-static
LDFLAGS = 
EXECUTABLE = aice_adapter
SOURCES = adapter.c \
		  aice_usb_command.c \
		  aice_usb_pack_format.c \
		  aice_log.c
OBJECTS = $(SOURCES:.c=.o)

UNAME_S := $(shell uname)

ifeq ($(UNAME_S), Linux)
	CFLAGS  += -DHAVE_LIBUSB1 -I./libusb/include/libusb-1.0
	SOURCES += jtag/drivers/libusb1_common.c 
	LDFLAGS += -ldl -lpthread -lrt libusb/lib/libusb-1.0.a
else 
	SOURCES += jtag/drivers/libusb0_common.c 
	LDFLAGS += -ldl -lpthread libusb/lib/libusb.a 
endif


$(EXECUTABLE): $(SOURCES) $(OBJECTS) 
	$(CC) -o $(EXECUTABLE) $(OBJECTS) $(LDFLAGS)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -rf *.o $(EXECUTABLE) 

